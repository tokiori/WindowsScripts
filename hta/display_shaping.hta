<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=9" />
        <meta charset="utf-8" />
        <title>JSON整形</title>
        <HTA:APPLICATION ID="thishta" />
        <script src="../wsf.js"></script>
        <script>
            var shaping = function () {
                var $i = document.querySelector("#inputData");
                var $o = document.querySelector("#outputData");
                var shapingstr = $i.value;
                var shapingstr = js.json.sharping(shapingstr);
                $o.value = shapingstr;
            };
            var init = function () {
                var $i = document.querySelector("#inputData");
                $i.value =
                    '{"aaa":"111", [{"bbb":222, "ccc":"333", "ddd":"{test}"}, null, "obj":{"trust":{"key1":"value1", "hasBrank":"  has brank  .  "}, "fake":"{\\"key1\\":\\"value1\\", \\"hasBrank\\":\\"  has brank  .  \\"}"}, null]}';
            };
        </script>
        <style></style>
    </head>
    <body onLoad="init()">
        <div id="contents_area">
            <p>整形前</p>
            <textarea
                id="inputData"
                style="width: 100%; margin-bottom: 1em; height: 10em"
            ></textarea
            ><br />
            <input type="button" value="JSON整形" onClick="shaping()" /><br />
            <p>整形後</p>
            <textarea
                id="outputData"
                style="width: 100%; height: 30em"
            ></textarea
            ><br />
        </div>
    </body>
</html>
